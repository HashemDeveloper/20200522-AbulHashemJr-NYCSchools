<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bottom_sheet_use_waze_opt_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:focusable="true"
        android:fontFamily="@font/droid_sans"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:text="@string/navtype_waze"
        android:textColor="@color/blue_gray400"
        android:textSize="24sp"
        app:drawableLeftCompat="@drawable/ic_waze_no_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bottom_sheet_use_google_opt_text_view_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:focusable="true"
        android:fontFamily="@font/droid_sans"
        android:layout_marginTop="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/navtype_google"
        android:textColor="@color/blue_gray400"
        android:textSize="24sp"
        app:drawableLeftCompat="@drawable/ic_google_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_use_waze_opt_text_view_id" />
</androidx.constraintlayout.widget.ConstraintLayout>